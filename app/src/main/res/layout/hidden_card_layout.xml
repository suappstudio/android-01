<?xml version="1.0" encoding="utf-8"?>

<!-- CARD DA EDITARE ESTESA -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_edit_num_da_cert"
    style="@style/list_card"
    android:layout_marginBottom="8dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/card_title"
                android:layout_alignParentLeft="true"
                android:text="numero da certificare" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/num_da_cert"
            style="@style/card_text_inactive"
            android:text="+39 ******** 325" />

        <TextView
            android:id="@+id/ins_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ciao core" />

        <TextView
            android:id="@+id/conf_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ciao caro" />

        <Button
            android:id="@+id/bt_procedi_num_cert"
            style="@style/card_button"
            android:enabled="false" />

    </LinearLayout>

</android.support.v7.widget.CardView>