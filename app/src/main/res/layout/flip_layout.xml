<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CARD DA EDITARE ESTESA -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_edit_carta_assoc"
        style="@style/list_card"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/ciaocore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/card_title"
                    android:layout_alignParentLeft="true"
                    android:text="Poste pay" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                     />
            </RelativeLayout>

            <TextView
                android:id="@+id/num_pp"
                style="@style/card_text_inactive"
                android:text="**** **** **** 1234" />

            <TextView
                android:id="@+id/data_scadenza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/15" />

            <TextView
                android:id="@+id/cvv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"/>

            <Button
                android:id="@+id/bt_procedi_pp_associa"
                style="@style/card_button" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- CARD DI RIEPILOGO BREVE -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_riep_carta_assoc"
        style="@style/list_card"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/card_title"
                    android:layout_alignParentLeft="true"
                    android:text="Poste Pay" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/num_pp_riep"
                style="@style/card_text_inactive"
                android:text="**** **** **** 1234" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- CARD DA EDITARE ESTESA -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_edit_num_da_cert"
        style="@style/list_card"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/card_title"
                    android:layout_alignParentLeft="true"
                    android:text="numero da certificare" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/num_da_cert"
                style="@style/card_text_inactive"
                android:text="+39 ******** 325" />

            <TextView
                android:id="@+id/ins_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ciao core"
                />

            <TextView
                android:id="@+id/conf_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ciao caro"
                />

            <Button
                android:id="@+id/bt_procedi_num_cert"
                style="@style/card_button"
                android:enabled="false" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>